<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/linearLayout">
    <TextView android:id="@+id/tvCardName"
              android:layout_height="wrap_content"
              android:text="card name"
              android:layout_marginTop="8dp" app:layout_constraintVertical_chainStyle="packed"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tvCardDescription"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_width="wrap_content"/>

    <TextView android:id="@+id/tvCardDescription"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="card description"
              app:layout_constraintTop_toBottomOf="@+id/tvCardName" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>